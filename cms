<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint Management System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1, h2 {
            text-align: center;
        }
        form {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        label {
            display: block;
            margin-bottom: 5px;
        }
        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }
        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        #notifications {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            padding: 5px;
            background-color: #fff;
            margin-bottom: 5px;
            border: 1px solid #eee;
        }
    </style>
</head>
<body>
    <h1>Complaint Management System</h1>

    <!-- Form to add new complaint -->
    <form id="addForm">
        <label for="dept">Department:</label>
        <select id="dept">
            <option value="HR">HR</option>
            <option value="Finance">Finance</option>
            <option value="IT">IT</option>
            <option value="Operations">Operations</option>
        </select>

        <label for="letterNo">Letter No:</label>
        <input type="text" id="letterNo" required>

        <label for="compDate">Compliance Date:</label>
        <input type="date" id="compDate" required>

        <label for="matter">Compliance Matter:</label>
        <textarea id="matter" required></textarea>

        <button type="button" onclick="addComplaint()">Add Complaint</button>
    </form>

    <!-- Table for displaying complaints -->
    <table id="compTable">
        <thead>
            <tr>
                <th>Department</th>
                <th>Letter No</th>
                <th>Compliance Date</th>
                <th>Matter</th>
                <th>Processed</th>
                <th>Complianced</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <!-- Notification section for pending processes -->
    <div id="notifications">
        <h2>Pending Notifications (for Concerning Officer and Monitor Cell)</h2>
        <ul id="notifList"></ul>
    </div>

    <script>
        let complaints = JSON.parse(localStorage.getItem('complaints')) || [];

        function save() {
            localStorage.setItem('complaints', JSON.stringify(complaints));
        }

        function addComplaint() {
            const dept = document.getElementById('dept').value;
            const letterNo = document.getElementById('letterNo').value;
            const compDate = document.getElementById('compDate').value;
            const matter = document.getElementById('matter').value;

            if (!letterNo || !compDate || !matter) {
                alert('Please fill all fields');
                return;
            }

            const newComplaint = {
                dept,
                letterNo,
                compDate,
                matter,
                processed: false,
                complianced: false,
                file: null
            };

            complaints.push(newComplaint);
            save();
            refreshTable();
            refreshNotifications();
            document.getElementById('addForm').reset();
        }

        function refreshTable() {
            let tbody = '';
            complaints.forEach((c, i) => {
                tbody += `
                    <tr>
                        <td>${c.dept}</td>
                        <td>${c.letterNo}</td>
                        <td>${c.compDate}</td>
                        <td>${c.matter}</td>
                        <td><input type="checkbox" ${c.processed ? 'checked' : ''} onchange="updateStatus(${i}, 'processed', this.checked)"></td>
                        <td><input type="checkbox" ${c.complianced ? 'checked' : ''} onchange="updateStatus(${i}, 'complianced', this.checked)"></td>
                        <td>
                            <input type="file" onchange="uploadFile(${i}, this.files[0])">
                            <button onclick="previewFile(${i})">Preview</button>
                        </td>
                    </tr>
                `;
            });
            document.querySelector('#compTable tbody').innerHTML = tbody;
        }

        function updateStatus(index, field, value) {
            complaints[index][field] = value;
            save();
            refreshNotifications();
        }

        function uploadFile(index, file) {
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    complaints[index].file = e.target.result;
                    save();
                    alert('File uploaded successfully');
                    refreshNotifications();
                };
                reader.readAsDataURL(file);
            }
        }

        function previewFile(index) {
            const file = complaints[index].file;
            if (file) {
                const previewWindow = window.open('');
                previewWindow.document.write(`
                    <html><head><title>Preview</title></head><body>
                        ${file.startsWith('data:image/') ? `<img src="${file}" style="max-width:100%;">` : ''}
                        ${file.startsWith('data:application/pdf') ? `<iframe src="${file}" width="100%" height="600px"></iframe>` : ''}
                        ${!file.startsWith('data:image/') && !file.startsWith('data:application/pdf') ? '<p>Preview not supported for this file type.</p>' : ''}
                    </body></html>
                `);
            } else {
                alert('No file uploaded for this complaint');
            }
        }

        function refreshNotifications() {
            let list = '';
            complaints.forEach(c => {
                if (!c.processed || !c.complianced) {
                    list += `<li>${c.dept} - Letter No: ${c.letterNo} (Date: ${c.compDate}) is pending processing/compliance.</li>`;
                }
            });
            document.getElementById('notifList').innerHTML = list;
        }

        // Initial load
        refreshTable();
        refreshNotifications();
    </script>
</body>
</html>
